<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/seatdisttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/dfw" />

    <SeekBar
        android:id="@+id/seatdistsb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seatdisttv" />

    <TextView
        android:id="@+id/seathitv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seatdistsb"
        android:text="@string/seatheight" />

    <SeekBar
        android:id="@+id/seathisb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seathitv" />

    <TextView
        android:id="@+id/seatangtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seathisb"
        android:text="@string/seatangle" />

    <SeekBar
        android:id="@+id/seatangsb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:max="90"
        android:layout_below="@+id/seatangtv" />

    <Button
        android:id="@+id/seatset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="1"
        android:layout_below="@+id/seatangsb"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/seatset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_alignBaseline="@+id/seatset1"
        android:layout_alignBottom="@+id/seatset1"
        android:layout_toEndOf="@+id/seatset1" />

    <Button
        android:id="@+id/seatset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_alignBaseline="@+id/seatset2"
        android:layout_alignBottom="@+id/seatset2"
        android:layout_toStartOf="@+id/seatset4" />

    <Button
        android:id="@+id/seatset4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/seatset3"
        android:text="4" />

    <Button
        android:id="@+id/seatdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/deleteseat" />
</RelativeLayout>