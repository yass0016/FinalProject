<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/main_toolbar"
        android:scrollbars="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lampImage"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:srcCompat="@drawable/lamp" />

            <ImageView
                android:id="@+id/garageImage"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:srcCompat="@drawable/garage" />

            <TextView
                android:id="@+id/garageText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/openGarage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/open_garage"/>

            <Button
                android:id="@+id/openLamp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/light_on"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>