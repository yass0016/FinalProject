<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/main_toolbar"
        android:scrollbars="horizontal">

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempInTitle"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:gravity="center_vertical"
                android:text=""
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>


            <EditText
                android:id="@+id/tempInData"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="Enter Temperature"
                android:inputType="number"
                android:text=""
                android:layout_below="@+id/tempInTitle"/>

            <Button
                android:id="@+id/addTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set House Temperature"
                android:layout_below="@id/tempInData"/>

                <ListView
                    android:id="@+id/tempInSched"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_below="@+id/addTemperature"/>

                <Button
                    android:id="@+id/addTempInShed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/tempInSched"
                    android:text="Add Scheduale" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>